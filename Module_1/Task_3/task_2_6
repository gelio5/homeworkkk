MOV A, 60 	;Число на входе
CALL FCT
HLT
FCT:
MOV B,A 
CMP A, 0
JZ ZERO
CMP A, 6
JAE WST
MOV B,A

 FACTOR:
   DEC B
   CMP B,0
   JBE A_INT
   MUL B
   JMP FACTOR 

 A_INT:
   MOV B,A

 HAD:
   DIV 100
   PUSH A
   MUL 100
   SUB B,A
   MOV A,B
   DIV 10
   PUSH A
   MUL 10
   SUB B,A
   MOV A,B

 UNIT:
   MOV D,B
   POP A
   MOV C,A
   POP A
   MOV B,A
   MOV A,D
   PUSH A
   MOV A,C
   PUSH A
   MOV A,B
   MOV B,253

 A_XIT:
   CMP A,0
   JNZ CHECK_1 

 FILTRATION_1:
   INC B
   POP A
   CMP A,0
   JNZ CHECK_1

 FILTRATION_2:
   INC B
   POP A

 CHECK_1:
   MOV D,A
   MOV A,0
   JMP CD

 CHECK_2:
   POP A
   MOV D,A
   MOV A,0

 CD: 
   CMP D,A
   JZ OUTPUT
   INC A
   JMP CD

 OUTPUT:
   ADD A, 48
   MOV [B],A
   INC B
   CMP B,0
   JZ END
   CMP B,255
   JBE CHECK_2

  STOP:
   DB "MEMORY OVERFLOW!"
   DB 0
 WST:
   MOV C, STOP 
   MOV D, 236
 ERROR:
   MOV A, [C]
   MOV [D], A
   INC C
   INC D
   CMP D,252
   JNZ ERROR
  
 ZERO:
   MOV A,1 

 END:
   RET
 
